{
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
      "assets": [
        {
          "include": "public/**/*",
          "outDir": "dist/public"
        },
        {
          "include": "views/**/*",
          "outDir": "dist/views"
        }
      ],
      "watchAssets": true
    }
  }
  